<h1>Artifact Update Form: <%= @artifact.name %></h1>
<br>
<%= form_with url: "/artifacts/#{@artifact.id}", method: :patch, local: true do |form| %>
  <%= form.label :name, "Update Artifact Name" %>
  <%= form.text_field :name, value: @artifact.name %>
  <br>
  <br>
  <%= form.label :material, "Update Material" %>
  <%= form.text_field :material, value: @artifact.material %>
  <br>
  <br>
  <%= form.label :year_created, "Update Year Created (include BCE or CE)" %>
  <%= form.text_field :year_created, value: @artifact.year_created %>
  <br>
  <br>
  <%= form.label :total_pieces, "Update Number of Total Pieces" %>
  <%= form.number_field :total_pieces, value: @artifact.total_pieces %>
  <br>
  <br>
  <%= form.label :on_loan, "Update Artifact On Loan from Other Museum:" %>
  <%= form.radio_button :on_loan, 'true' %>
  <%= form.label :on_loan_true, "True" %>
  <%= form.radio_button :on_loan, 'false' %>
  <%= form.label :on_loan_false, "False" %>
  <br>
  <br>
  <br> 
  <%= form.submit "Update Artifact" %>
 <% end %>